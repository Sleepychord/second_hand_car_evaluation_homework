extends layout

block content
    h1= title
    script(src='/javascripts/webcam.min.js')
    #my_camera
    .button
        button(onclick='take_snapshot()') Snapshot
    img#img(src='')
    script(language='JavaScript').
        Webcam.set({
        width: 320,
        height: 240,
        image_format: 'jpeg',
        jpeg_quality: 90
        });
        Webcam.attach( '#my_camera' );
        function take_snapshot() {
        Webcam.snap( function(data_uri) {
        $("#img").attr("src", data_uri);
        } );
        }
        function upload() {
        Webcam.upload( $("#img").attr("src"), '/face', function(code, text) {
            alert(code);
        });
        }


